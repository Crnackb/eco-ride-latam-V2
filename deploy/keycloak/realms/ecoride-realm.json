{
  "realm": "ecoride",
  "enabled": true,
  "displayName": "Eco-Ride LATAM",
  "sslRequired": "NONE",
  "registrationAllowed": false,
  "loginWithEmailAllowed": true,
  "rememberMe": true,
  "bruteForceProtected": true,

  "roles": {
    "realm": [
      {
        "name": "ROLE_DRIVER",
        "description": "Driver role"
      },
      {
        "name": "ROLE_PASSENGER",
        "description": "Passenger role"
      },
      {
        "name": "ROLE_ADMIN",
        "description": "Admin role"
      }
    ]
  },

  "clientScopes": [
    {
      "name": "trips:read",
      "description": "Trips read scope",
      "protocol": "openid-connect",
      "attributes": {
        "include.in.token.scope": "true",
        "display.on.consent.screen": "true"
      },
      "protocolMappers": []
    },
    {
      "name": "trips:write",
      "description": "Trips write scope",
      "protocol": "openid-connect",
      "attributes": {
        "include.in.token.scope": "true",
        "display.on.consent.screen": "true"
      },
      "protocolMappers": []
    },
    {
      "name": "payments:charge",
      "description": "Payments charge scope",
      "protocol": "openid-connect",
      "attributes": {
        "include.in.token.scope": "true",
        "display.on.consent.screen": "true"
      },
      "protocolMappers": []
    },
    {
      "name": "notifications:send",
      "description": "Notifications send scope",
      "protocol": "openid-connect",
      "attributes": {
        "include.in.token.scope": "true",
        "display.on.consent.screen": "true"
      },
      "protocolMappers": []
    }
  ],

  "clients": [
    {
      "clientId": "eco-gateway",
      "name": "Eco Gateway",
      "rootUrl": "http://localhost:8080",
      "baseUrl": "/",
      "adminUrl": "",
      "surrogateAuthRequired": false,
      "enabled": true,
      "clientAuthenticatorType": "client-secret",
      "redirectUris": [
        "http://localhost:8080/*",
        "http://localhost:4200/*"
      ],
      "webOrigins": [
        "+"
      ],
      "notBefore": 0,
      "bearerOnly": false,
      "consentRequired": false,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": false,
      "publicClient": true,
      "frontchannelLogout": false,
      "protocol": "openid-connect",
      "attributes": {
        "post.logout.redirect.uris": "+",
        "pkce.code.challenge.method": "S256"
      },
      "defaultClientScopes": [
        "web-origins",
        "roles",
        "profile",
        "email",
        "trips:read",
        "trips:write",
        "payments:charge",
        "notifications:send"
      ],
      "optionalClientScopes": [
        "address",
        "phone"
      ]
    },
    {
      "clientId": "eco-internal",
      "name": "Eco Internal",
      "rootUrl": "",
      "baseUrl": "",
      "adminUrl": "",
      "surrogateAuthRequired": false,
      "enabled": true,
      "clientAuthenticatorType": "client-secret",
      "redirectUris": [],
      "webOrigins": [],
      "notBefore": 0,
      "bearerOnly": false,
      "consentRequired": false,
      "standardFlowEnabled": false,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "serviceAccountsEnabled": true,
      "publicClient": false,
      "frontchannelLogout": false,
      "protocol": "openid-connect",
      "attributes": {
        "client_credentials.use_refresh_token": "false"
      },
      "defaultClientScopes": [
        "roles",
        "profile",
        "email",
        "trips:read",
        "trips:write",
        "payments:charge",
        "notifications:send"
      ],
      "optionalClientScopes": []
    }
  ],

  "users": [
    {
      "username": "driver",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Demo",
      "lastName": "Driver",
      "email": "driver@example.com",
      "credentials": [
        {
          "type": "password",
          "value": "password",
          "temporary": false
        }
      ],
      "realmRoles": [
        "ROLE_DRIVER"
      ]
    },
    {
      "username": "passenger",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Demo",
      "lastName": "Passenger",
      "email": "passenger@example.com",
      "credentials": [
        {
          "type": "password",
          "value": "password",
          "temporary": false
        }
      ],
      "realmRoles": [
        "ROLE_PASSENGER"
      ]
    },
    {
      "username": "admin",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Admin",
      "lastName": "User",
      "email": "admin@example.com",
      "credentials": [
        {
          "type": "password",
          "value": "password",
          "temporary": false
        }
      ],
      "realmRoles": [
        "ROLE_ADMIN"
      ]
    }
  ]
}
